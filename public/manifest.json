{
  "manifest_version": 3,
  "name": "WikiToGrok",
  "version": "0.2.0",
  "description": "Redirect Wikipedia articles to Grokipedia - view AI-enhanced wiki articles",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WikiToGrok",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["content-script.js"],
      "css": [],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
