{
  "name": "wiki-to-grok",
  "version": "0.2.1",
  "description": "Redirect Wikipedia articles to Grokipedia - view AI-enhanced wiki articles",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit && node scripts/build.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "edge-extension",
    "wikipedia",
    "grokipedia",
    "redirect"
  ],
  "author": "Craig Treasure",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "@types/chrome": "^0.1.33",
    "@types/node": "^24.10.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
